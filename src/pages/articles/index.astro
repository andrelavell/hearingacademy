---
import BaseLayout from '../../layouts/BaseLayout.astro';
import topics from '../../data/topics_index.json';

const items = (topics || []).slice().sort((a, b) => {
  const ad = new Date(a.publishedTime || a.modifiedTime || 0).getTime();
  const bd = new Date(b.publishedTime || b.modifiedTime || 0).getTime();
  return bd - ad;
});
---

<BaseLayout title="Articles" description="Expert articles on hearing health, hearing aids, technology, and wellness. Stay informed with the latest insights from hearing healthcare professionals.">
  <main>
    <section class="articles-hero">
      <div class="container">
        <h1>Expert Hearing Health Articles</h1>
        <p>Stay informed with the latest insights, research, and expert guidance on hearing health and hearing aid technology.</p>
      </div>
    </section>

    <section class="articles-content">
      <div class="container">
        {items.length === 0 ? (
          <p>No articles yet. Please check back soon.</p>
        ) : (
          <div class="articles-grid">
            {items.map((it) => (
              <article class="article-card">
                {it.image && (
                  <div class="article-image">
                    <img src={it.image} alt={it.title} width="400" height="250" />
                  </div>
                )}
                <div class="article-content">
                  <div class="article-meta">
                    <span class="category">{it.category}</span>
                    {it.publishedTime && (
                      <time datetime={it.publishedTime}>
                        {new Date(it.publishedTime).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
                      </time>
                    )}
                  </div>
                  <h2><a href={`/articles/${it.slug}`}>{it.title}</a></h2>
                  {it.description && <p>{it.description}</p>}
                  <a href={`/articles/${it.slug}`} class="read-more">Read More</a>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
  </main>

  <style>
    .articles-hero {
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
      padding: var(--space-8) 0;
      text-align: center;
    }

  }

  .articles-hero p {
    font-size: var(--fs-400);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .articles-content {
    padding: var(--space-8) 0;
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-6);
  }

  .article-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .article-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .article-image img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  .article-content {
    padding: var(--space-5);
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-4);
    font-size: var(--fs-100);
  }

  .category {
    background: var(--color-primary);
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: 20px;
    font-weight: var(--fw-medium);
  }

  .article-content h2 {
    margin-bottom: var(--space-4);
    font-size: var(--fs-500);
  }

  .article-content h2 a {
    color: var(--color-text);
    text-decoration: none;
  }

  .article-content h2 a:hover {
    color: var(--color-primary);
  }

  .article-content p {
    color: var(--color-text-muted);
    margin-bottom: var(--space-5);
    line-height: var(--lh-normal);
  }

  .read-more {
    color: var(--color-primary);
    font-weight: var(--fw-semibold);
    text-decoration: none;
    font-size: var(--fs-100);
  }

  .read-more:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .articles-hero h1 {
      font-size: var(--fs-700);
    }

    .articles-hero p {
      font-size: var(--fs-300);
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }
  }
  </style>
</BaseLayout>

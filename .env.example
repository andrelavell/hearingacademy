# Environment variables for HearingAcademy automation
# Copy this file to `.env` and fill in the values. Do NOT commit your real secrets.

# OpenAI
OPENAI_API_KEY=
# Prefer a stable, available model. If you have access to a newer model, set it here.
# Example: gpt-4o, gpt-4.1, o4-mini. If you truly have access to gpt-5, set OPENAI_MODEL=gpt-5
OPENAI_MODEL=gpt-5

# Pexels
PEXELS_API_KEY=

# Content generation defaults
ARTICLES_PER_DAY=3
# Authors are randomized from src/data/authors.json; AUTHOR_NAME is used only as fallback
AUTHOR_NAME=HearingAcademy
SITE_BASE_URL=https://hearingacademy.org
IMAGE_STORAGE=local  # local | remote

# Generation style controls
TONE=human, empathetic, approachable, authoratice, educational
MIN_WORDS=1000
MAX_WORDS=1500
